[core]
  excludesfile = ~/.config/git/ignore
  pager = diff-so-fancy | less --tabs=4 -RFX
  editor = nvim +start
[color]
  ui = true
[branch]
  autosetupmerge = always
[push]
  default = simple
  followTags = true
[alias]
  br = branch
  co = checkout
  ci = commit
  st = status -bsu
  check = "!git fetch -a && git st"
  ch = "!git check"
  ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
  pop = stash pop
  prb = pull --rebase
  prbs = "!git stash; git pull --rebase; git stash pop"
  amend = "commit --amend"
  soft = "reset --soft HEAD^"
[credential]
  helper = osxkeychain
[diff]
  compactionHeuristic = true
[merge]
  ff = only
  conflictstyle = diff3
[commit]
  gpgSign = true
[status]
  showUntrackedFiles = all
